<%- include('../templates/headerindex') -%>
<div class="content">
    <center> <%- hd-%></center> 
<div class="row">

<div class="col-md-6">
    <form action="/controllers/addstaff-controller" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="stafftype">Staff Type:</label>
            <select class="form-control" name="stafftype">
             <option value="Teacher">Teacher</option>
             <option value="Bursar">Bursar</option>
             <option value="Other">Other Non Staff</option>
            </select>
        </div>
        <div class="form-group">
            <label>First Name</label>
            <input type="text" name="firstname" class="form-control input-sm"
                placeholder="First Name" minlength="3" required>
        </div>
        <div class="form-group">
      <label>Second Name</label>
        <input type="text" name="lastname" class="form-control input-sm" minlength="3" placeholder="Second Name" required>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control input-sm"  placeholder="Email" required validate>
        </div>
        <div class="form-group">
            <label>ID Number</label>
            <input type="number" name="natid" class="form-control input-sm"
                placeholder="ID Number" minlength="6" maxlength="8" required>
        </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label for="subjects"> Subjects </label>
        <select multiple  class="form-control" name="subjects">
            <% for (var i=0; i<subjects.length; i++){%>
                <option value<%= subjects[i].subjectcode %>><%= subjects[i].subjectcode %>
                </option>
                <% }%>
        </select>
      </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input type="tel" name="phone" class="form-control input-sm"
            placeholder="+254700000000 or 0700000000" minlength="10" maxlength="16">
    </div>

    <div class="form-group">
        <label>Upload Full Image</label>
        <input type="file"  title="Full Image"
            class="form-control input-sm"  name="profile" accept="image/*">
    </div>


    <div class="form-group">
        <label>Upload Copy of ID </label>
        <input type="file"  title="ID"
            class="form-control input-sm"  name="idcopy" accept="image/*">
    </div>
    <div class="form-group">
        <label>Upload Certificate</label>
        <input type="file"  title="Certificate"
            class="form-control input-sm" name="certificate">
    </div>


    <button type="submit" name="add" class="btn btn-sm btn-success pull-right"><i
            class="fa fa-save"></i> Save Teacher</button>

</div>
</form>
</div>
</div>


<%- include('../templates/footer') -%>