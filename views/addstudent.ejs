<%- include('../templates/headerindex') -%>
<div class="content">
    <center> <%- hd-%></center>
    <div class="row">
        <div class="col-md-6">
            <center><h6 class="btn btn-primary">Student Details</h6></center>
            <form action="/controllers/addstudent-controller" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="currentclass">Class Admitted:</label>
                    <select class="form-control" name="currentclass">
                        <option value="">---select class--</option>
                        <% for (var i=0; i<clases.length; i++){%>
                        <option value<%= clases[i].classcode %>> <%= clases[i].classcode %>
                        </option>
                        <% }%>
                    </select required> 
                </div>
                <div class="form-group">
                    <label for="termcode">Term:</label>
                    <select class="form-control" name="termcode">
                        <option value="">--select term--</option>
                        <% for (var i=0; i<terms.length; i++){%>
                        <option value<%= terms[i].termcode %>> <%= terms[i].termcode %>
                        </option>
                        <% }%>
                    </select required>
                </div>
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" name="firstname" class="form-control input-sm" placeholder="First Name"
                        minlength="3" required>
                </div>
                <div class="form-group">
                    <label>Second Name</label>
                    <input type="text" name="lastname" class="form-control input-sm" minlength="3"
                        placeholder="Second Name" required>
                </div>
                <div class="form-group">
                    <label for="gender">Gender:</label>
                    <select class="form-control" name="gender">
                        <option value="female">Female</option>
                        <option value="male">Male</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Date of Birth</label>
                    <input type="date" name="dateofbirth" class="form-control input-sm" placeholder="00-00-0000"
                        required>
                </div>

                <div class="form-group">
                    <label>Upload Birth Certificate</label>
                    <input type="file" title="Birth Certiificate" class="form-control input-sm" name="birthcopy">
                </div>
                <div class="form-group">
                    <label>Upload Passport Picture</label>
                    <input type="file" title="Passport Picture" class="form-control input-sm" name="profile"
                        accept="image/*">
                </div>
        </div>
        <div class="col-md-6">
            <center><h6 class="btn btn-primary">Parents Details</h6></center>
            <div class="form-group">
                <label> Father's Full Names</label>
                <input type="text" name="pfullnames" class="form-control input-sm" placeholder="Full Names" required>
            </div>
            <div class="form-group">
                <label>Mother's Full Names</label>
                <input type="text" name="mfullnames" class="form-control input-sm" placeholder="Full Names" required>
            </div>
            <div class="form-group">
                <label> Parent's Email</label>
                <input type="email" name="parentemail" class="form-control input-sm" placeholder="Email" required
                    validate>
            </div>
            <div class="form-group">
                <label>ID Number</label>
                <input type="number" name="nationalid" class="form-control input-sm" placeholder="ID/Passport Number"
                    required>
            </div>

            <div class="form-group">
                <label>Phone Number</label>
                <input type="tel" name="parentphone" class="form-control input-sm"
                    placeholder="+254700000000 or 0700000000" minlength="10" maxlength="16" required>
            </div>
            <div class="form-group">
                <label>Expected Year of Graduation</label>
                <input type="date" name="graduationdate" class="form-control input-sm" placeholder="Completion Year"
                    required>
            </div>
            <button type="submit" name="add" class="btn btn-sm btn-success pull-right"><i class="fa fa-save"></i> Save
                Student</button>

        </div>
        </form>
    </div>
</div>


<%- include('../templates/footer') -%>